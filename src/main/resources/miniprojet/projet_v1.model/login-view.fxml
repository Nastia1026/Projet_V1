<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="miniprojet.projet_v1.model.controller.LoginController" <!-- Chemin complet -->
        spacing="10"
        alignment="CENTER"
        prefWidth="400"
        prefHeight="300">

<Label text="Connexion" style="-fx-font-size: 24;"/>

<TextField fx:id="emailField" promptText="Email"/> <!-- fx:id exact -->
<PasswordField fx:id="passwordField" promptText="Mot de passe"/> <!-- fx:id exact -->

<Button text="Se connecter" onAction="#handleLogin"/> <!-- Correspond à la méthode -->

<Label fx:id="errorLabel" style="-fx-text-fill: red;" visible="false"/>
        </VBox>